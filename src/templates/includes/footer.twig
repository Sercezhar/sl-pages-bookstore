<footer class="footer">
  <div class="footer__container">
    <div class="footer__body">
      <div class="footer-logo">
        {% include './../components/logo.twig' %}

        <ul class="socials socials--footer">
          {% for social in socials %}
          <li>
            <a href="{{ social.link }}" class="socials__link">
              <svg width="18" height="18">
                <use href="{{ social.icon }}"></use>
              </svg>
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>

      <div class="footer-links">
        <div class="footer-links__column">
          <h5 class="h5 h5--white">Explore</h5>
          <ul>
            {% for nav in navigation %}
            <li class="li--dots">
              <a href="{{ nav.link }}">{{ nav.title }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>

        <div class="footer-links__column">
          <h5 class="h5 h5--white">Utility Pages</h5>
          <ul>
            {% for footerPage in footerPages %}
            <li class="li--dots">
              <a href="{{ footerPage.link }}">{{ footerPage.title }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>

        <div class="footer-links__column">
          <h5 class="h5 h5--white">Keep in Touch</h5>
          <address>
            <ul class="footer-address">
              {% for footerContact in footerContacts %}
              <li class="footer-address__item">
                <div class="footer-address__title">
                  {{ footerContact.title }} :
                </div>
                <a href="{{ footerContact.link }}"> {{ footerContact.text }}</a>
              </li>
              {% endfor %}
            </ul>
          </address>
        </div>
      </div>
    </div>

    <div class="footer-copyright">
      <div>
        © Drafted by
        <a
          class="footer-copyright__link"
          href="https://www.figma.com/file/kIAj9KxcQIdOmUOHQBmP2Z/Book-Webflow-Website-Template-(Community)?type=design&node-id=0%3A1&mode=design&t=BECAT9GxTe1eZK6v-1"
          >Victorflow</a
        >
        — Developed by
        <a class="footer-copyright__link" href="https://github.com/Sercezhar"
          >Sercezhar</a
        >
      </div>
    </div>
  </div>
</footer>
